      Self.FModelList[I].id      := SQL.getInteger(id);
      Self.FModelList[I].data      := SQL.getInteger(data);
      Self.FModelList[I].bico      := SQL.getInteger(bico);
      Self.FModelList[I].id_produto      := SQL.getInteger(id_produto);
      Self.FModelList[I].litros      := SQL.getInteger(litros);
      Self.FModelList[I].preco      := SQL.getInteger(preco);
      Self.FModelList[I].total      := SQL.getInteger(total);
      Self.FModelList[I].caixa      := SQL.getInteger(caixa);
      Self.FModelList[I].status      := SQL.getInteger(status);
      SQL.DataSet.Next;
    end;               
    Self.FModelList.TrimExcess; 
    ModelList := TModelBaseList<TModelBase>( Self.FModelList );
  end;                
  Result := ( ListError.Count = 0 ); 
