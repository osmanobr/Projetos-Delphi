      Self.FModelList[I].lote      := SQL.getInteger(lote);
      Self.FModelList[I].nfe_chave      := SQL.getInteger(nfe_chave);
      Self.FModelList[I].protocolo      := SQL.getInteger(protocolo);
      Self.FModelList[I].nseqevento      := SQL.getInteger(nseqevento);
      Self.FModelList[I].evento      := SQL.getInteger(evento);
      Self.FModelList[I].data      := SQL.getInteger(data);
      Self.FModelList[I].hora      := SQL.getInteger(hora);
      Self.FModelList[I].versao      := SQL.getInteger(versao);
      Self.FModelList[I].descricao_evento      := SQL.getInteger(descricao_evento);
      Self.FModelList[I].correcao      := SQL.getInteger(correcao);
      SQL.DataSet.Next;
    end;               
